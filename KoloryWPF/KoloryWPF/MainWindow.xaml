<Window x:Class="KoloryWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KoloryWPF"
        mc:Ignorable="d"
        Title="KoloryWPF" Height="460" Width="640"
        KeyDown="Window_KeyDown">
    <Grid>
        <Rectangle x:Name="rectangle" Fill="#FFF4F4F5" Margin="10,10,10,75" Stroke="Black"/>
        <Slider x:Name="sliderR" Height="14" Margin="10,0,10,56" VerticalAlignment="Bottom" Maximum="255" ValueChanged="SliderR_ValueChanged"/>
        <Slider x:Name="sliderG" Height="19" Margin="10,0,10,32" VerticalAlignment="Bottom" Maximum="255" ValueChanged="SliderR_ValueChanged"/>
        <Slider x:Name="sliderB" Height="17" Margin="10,0,10,10" VerticalAlignment="Bottom" Maximum="255" ValueChanged="SliderR_ValueChanged"/>

    </Grid>
</Window>
